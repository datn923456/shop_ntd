        $(document).ready(function() {
            var navbar = $("#myNavbar");
            var sticky = navbar.offset().top;

            $(window).scroll(function() {
                if (window.pageYOffset >= sticky) {
                    navbar.addClass("fixed-top");
                } else {
                    navbar.removeClass("fixed-top");
                }
            });
        });

