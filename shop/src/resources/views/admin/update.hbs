<form name="delete-course-form" method="POST"></form>

<!--Modal of button delete-->
<div class="modal fade" id="delete-course-modal" tabindex="-1" aria-labelledby="delete-course-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Dữ liệu sẽ vào thùng rác.
      </div>
      <div class="modal-footer">
        <button id="btn-delete" type="button" class="btn btn-danger" >Xóa bỏ</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>
 <script>
    document.addEventListener('DOMContentLoaded', function(){
        var courseID;
        var deleteForm = document.forms['delete-course-form'];
        var btnDeleteCourse = document.getElementById('btn-delete');
        var containerForm = document.forms['container-form'];
        var checkboxAll = $('#checkbox-all');
        var courseItemCheckbox = $('input[name="courseIDS[]"]');
        var checkAllSubmitBtn = $('.btn-checkall-submit');

        $('#delete-course-modal').on('show.bs.modal', function(event){
            var button = $(event.relatedTarget);
            courseID = button.data('id');
            
        })

        //when delete course btn clicked 
        btnDeleteCourse.onclick = function() {
            deleteForm.action = '/admin/update/' + courseID + '?_method=DELETE';
            deleteForm.submit();
        }
        
        //checkbox all clicked
        checkboxAll.change(function(){
            //boolen trả về true or false
            //console.log($(this).prop('checked'));

            //bản chất isCheckboxAll trả về true false rồi nên thế vô luôn
            var isCheckboxAll = $(this).prop('checked');
            courseItemCheckbox.prop('checked', isCheckboxAll);
            renderCheckAllSubmitBtn();
        });


        //Course item checkbox changed
        courseItemCheckbox.change(function(){
            var isCheckboxAll = courseItemCheckbox.length === $('input[name="courseIDS[]"]:checked').length;
            checkboxAll.prop('checked', isCheckboxAll);
            renderCheckAllSubmitBtn();
        })

        //check all submit button clicked
        //checkAllSubmitBtn.click(function(e ){
        //    e.preventDefault();
        //    //check coi có disable hay không
        //    var isSubmitable = !$(this).hasClass('disabled');
        //    if(isSubmitable){
        //        containerForm.submit();
        //    }
        //})

        checkAllSubmitBtn.on('submit', function(e ){
            //check coi có disable hay không
            var isSubmitable = !$(this).hasClass('disabled');
            if(isSubmitable){
                e.preventDefault();
            }
        })


        //re-render check all submit button
        function renderCheckAllSubmitBtn(){
            var checkedCount = $('input[name="courseIDS[]"]:checked').length;
            if(checkedCount > 0){
                console.log()
                checkAllSubmitBtn.removeClass('disabled');
            }else{
                checkAllSubmitBtn.addClass('disabled');
            }
        }

        //console.log(containerForm);

        
    });

    
</script>