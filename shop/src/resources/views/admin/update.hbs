        <form name="container-form" class="col-lg-8 " method="POST" action="/admin/update/form-actions">
            <h3>
                Khóa học của tôi
            </h3>
            <div class="mt-4 d-flex align-items-center">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
                    <label class="form-check-label" for="checkbox-all">
                        Chọn tất cả
                    </label>
                </div>

                <select class="form-control form-control-sm checkbox-select-all-options" name="action" required>
                    <option value="">Lựa chọn phương thức</option>
                    <option value="delete">Xóa tất cả đã chọn</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                </select>
                <button class="btn btn-primary btn-sm btn-checkall-submit disabled">Thực hiện</button>
            </div>
            <table class="table mt-4">
                <thead>
                    <tr >
                        <th scope="col"> #</th>
                        <th scope="col" style="text-align: center;">STT</th>
                        <th scope="col" style="text-align: center;">Tên khóa học
                            {{{sortable 'name' _sort}}}
                        </th>
                        <th scope="col" style="text-align: center;">Level
                            {{{sortable 'level' _sort}}}
                        </th>
                        <th scope="col" style="text-align: center;">Thời gian tạo
                            {{{sortable 'createdAt' _sort}}}
                        </th>
                        <th scope="col" style="text-align: center;">Sửa</th>
                        <th scope="col" style="text-align: center;">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each adminUpdate}}
                    <tr>
                        <td >
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="courseIDS[]" value="{{this._id}}" >
                            </div>
                        </td>
                        <th scope="row" style="text-align: center;">{{sum @index 1}}</th>
                        <td>{{this.name}}</td>
                        <td style="text-align: center;">{{this.level}}</td>
                        <td>{{this.createdAt}}</td>
                        <td style="text-align: center;">
                            <a href="/admin/update/{{this._id}}/edit" class="edit-button"><span>Sửa</span></a>
                        </td>
                        <td style="text-align: center;">
                            <a href="#" id="btn-delete-course" class="delete-button" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-course-modal"><span>Xóa</span></a>
                            
                        </td>
                    </tr>
                    {{else}}
                        <tr>
                            <td colspan="5" style="text-align: center;">
                                Bạn chưa đăng cái nào.
                                <a href="/admin/create" class="edit-button"><span>Đăng ngay</span></a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                </table>
        </form>
    </div>
