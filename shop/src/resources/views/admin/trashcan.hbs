        <div class="col-lg-8 ">
            <h3>
                Khóa học của tôi
            </h3>
            <table class="table mt-4">
                <thead>
                    <tr style="text-align: center;">
                        <th scope="col">STT</th>
                        <th scope="col">Tên khóa học</th>
                        <th scope="col">Level</th>
                        <th scope="col">Thời gian tạo</th>
                        <th scope="col" >Sửa</th>
                        <th scope="col" >Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each adminFindDeleted}}
                    <tr>
                        <th scope="row" style="text-align: center;">{{sum @index 1}}</th>
                        <td>{{this.name}}</td>
                        <td style="text-align: center;">{{this.level}}</td>
                        <td>{{this.createdAt}}</td>
                        <td style="text-align: center;">
                            <!--data-id là chỗ để lấy id-->
                            <a href="#" class="edit-button btn-restore" data-id="{{this._id}}"><span>Khôi phục</span></a>
                        </td>
                        <td style="text-align: center;">
                            <a href="#" id="btn-delete-course" class="delete-button" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-course-modal"><span>Xóa vĩnh viễn</span></a>
                            
                        </td>
                    </tr>
                    {{else}}
                        <tr>
                            <td colspan="5" style="text-align: center;">
                                Thùng rác trống.
                                <a href="/admin/update" class="edit-button"><span>Danh sách khóa học</span></a>
                                
                            </td>
                        </tr>
                    {{/each}}
