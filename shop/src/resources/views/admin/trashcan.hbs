<!--Delete hidden form-->
<form name="delete-course-form" method="POST"></form>
<form name="restore-course-form" method="POST"></form>

<!--Modal of button delete-->
<div class="modal fade" id="delete-course-modal" tabindex="-1" aria-labelledby="delete-course-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Sure !!!???
      </div>
      <div class="modal-footer">
        <button id="btn-delete" type="button" class="btn btn-danger" >Xóa bỏ</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>
 <script>
    document.addEventListener('DOMContentLoaded', function(){
        //$(this).data('id');var courseID;
        //lấy nút form bằng name
        var deleteForm = document.forms['delete-course-form'];

        var restoreForm = document.forms['restore-course-form'];

        var btnDeleteCourse = document.getElementById('btn-delete');
        var btnRestore = $('.btn-restore');
        //$(this).data('id'); lấy id từ dòng nút "khôi phục" ở chỗ data-id
        var courseID = $(this).data('id');

        $('#delete-course-modal').on('show.bs.modal', function(event){
            var button = $(event.relatedTarget);
            courseID = button.data('id');
            
        })

        btnDeleteCourse.onclick = function() {
            deleteForm.action = '/admin/trashcan/' + courseID + '/delete?_method=DELETE';
            deleteForm.submit();
        }
        btnRestore.click(function (e){
            //bỏ cái load lại trang của thẻ a (hành vi mặc định)
            e.preventDefault();
            var courseID = $(this).data('id');
            restoreForm.action = '/admin/trashcan/' + courseID + '/restore?_method=PATCH';
            restoreForm.submit();
        })
    })
</script>